{
  "name": "@base-saas/api",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply base-saas-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply base-saas-db --remote",
    "db:reset": "rm -f .wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.sqlite* && bun run db:migrate",
    "test": "bun test"
  },
  "dependencies": {
    "@clerk/backend": "^1.2.4",
    "@cloudflare/d1": "^1.4.1",
    "@hono/clerk-auth": "^2.0.0",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.4.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240605.0",
    "@types/node": "^22",
    "drizzle-kit": "^0.31.4",
    "bun-types": "^1.0.0",
    "typescript": "^5.5.4",
    "wrangler": "^3.60.1"
  }
}
